CC=gcc
SRCPATH=src/
LDFLAGS= -Wall -lpthread -pthread -D_REENTRANT -lrt -lm

GERADOREXECUTABLE=gerador.out
SAUNAEXECUTABLE=sauna.out

EXECUTABLES= $(GERADOREXECUTABLE) $(SAUNAEXECUTABLE)

all: $(EXECUTABLES)

## GERADOR
GERADORSOURCES= $(SRCPATH)gerador.c $(SRCPATH)constants.c

$(GERADOREXECUTABLE): $(GERADORSOURCES)
	$(CC) $(LDFLAGS) $(GERADORSOURCES) -o $(GERADOREXECUTABLE)

## SAUNA
SAUNASOURCES=$(SRCPATH)sauna.c $(SRCPATH)constants.c

$(SAUNAEXECUTABLE): $(SAUNASOURCES)
	$(CC) $(LDFLAGS) $(SAUNASOURCES) -o $(SAUNAEXECUTABLE)


clean:
	rm -f *.o $(EXECUTABLES)
